{
  "ValidationSettings": {
    "MaxGuestsPerBooking": 10,
    "MaxRoomCapacity": 10,
    "MaxBookingDaysInAdvance": 365,
    "AllowSameDayCheckIn": true,
    "FieldLengths": {
      "RoomNumber": 50,
      "RoomType": 100,
      "RoomDescription": 500,
      "FirstName": 100,
      "LastName": 100,
      "Email": 200
    },
    "PhoneValidation": {
      "Pattern": "^\\+?[1-9]\\d{1,14}$",
      "ErrorMessage": "Invalid phone number format."
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
